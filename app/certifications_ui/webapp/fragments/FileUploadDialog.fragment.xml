<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
	<Dialog title="Upload Learning Journey Content">
		<l:VerticalLayout class="sapUiMediumMargin">
			<u:FileUploader id="fileUploader" name="myFileUpload" tooltip="Upload file" fileType="pdf" uploadComplete=".onHandleUploadComplete"
				change=".onHandleFileChange" typeMissmatch=".onHandleTypeMismatch" placeholder="Upload file..."/>
			<Button text="Upload File" press=".onHandleUploadPress"/>
		</l:VerticalLayout>
		<beginButton>
			<Button text="Close" press=".onCloseDialog"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>